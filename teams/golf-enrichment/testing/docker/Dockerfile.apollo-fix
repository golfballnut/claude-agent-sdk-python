# Dockerfile for testing Apollo contact validation fixes
# Tests that duplicate contacts are properly filtered

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy entire team codebase
COPY agents/ ./agents/
COPY testing/ ./testing/
COPY test_apollo_fixes_direct.py .

# Create results directory
RUN mkdir -p /app/results

CMD ["python", "test_apollo_fixes_direct.py"]
